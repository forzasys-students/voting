generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
  polls        Poll[]

  @@map("users")
}

model Poll {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  creatorId   Int
  date        DateTime     @default(now())
  endDate     DateTime?
  options     PollOption[]
  creator     User         @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  votes       Vote[]

  @@map("polls")
}

model PollOption {
  id           Int      @id @default(autoincrement())
  eventId      String
  description  String
  videoUrl     String
  thumbnailUrl String
  pollId       Int
  date         DateTime @default(now())
  poll         Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes        Vote[]

  @@map("poll_options")
}

model Vote {
  id        Int        @id @default(autoincrement())
  pollId    Int
  optionId  Int
  ipAddress String
  userAgent String
  date      DateTime   @default(now())
  option    PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  poll      Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)

  @@map("votes")
}
